{
    "name": "buddha-jones-portal",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=6",
        "npm": ">=3.8"
    },
    "directories": {
        "lib": "api/v2/src",
        "test": "api/v2/test/"
    },
    "scripts": {
        "postinstall": "cd front && npm install",
        "lint": "cd front && npm run lint",
        "front-lint": "npm run lint",
        "build": "cd front && npm run build",
        "start": "npm run start-front-end",
        "start-front-end": "cd front && npm start",
        "start-node-api": "nodemon api/v2/src/",
        "start-php-api": "cd api/bin/public && php -S 127.0.0.1:8000"
    },
    "dependencies": {
        "@feathersjs/authentication": "^2.1.5",
        "@feathersjs/authentication-jwt": "^2.0.1",
        "@feathersjs/authentication-local": "^1.2.1",
        "@feathersjs/configuration": "^1.0.2",
        "@feathersjs/errors": "^3.3.0",
        "@feathersjs/express": "^1.2.2",
        "@feathersjs/feathers": "^3.1.5",
        "@feathersjs/socketio": "^3.2.1",
        "accounting": "^0.4.1",
        "axios": "^0.17.1",
        "body-parser": "^1.18.3",
        "classnames": "^2.2.5",
        "compression": "^1.7.2",
        "cors": "^2.8.4",
        "eslint": "^2.13.1",
        "eslint-plugin-jsx-a11y": "^1.2.3",
        "express-http-proxy": "^1.2.0",
        "feathers-sequelize": "^3.1.0",
        "helmet": "^3.12.0",
        "history": "^3.3.0",
        "html-entities": "^1.2.1",
        "http-proxy-middleware": "^0.18.0",
        "immutability-helper": "^2.6.4",
        "invariant": "^2.2.2",
        "lodash": "^4.17.4",
        "luxon": "^0.2.12",
        "moment": "^2.19.4",
        "multer": "^1.3.1",
        "mysql2": "^1.5.3",
        "prop-types": "^15.6.0",
        "query-string": "^5.0.1",
        "react": "^16.2.0",
        "react-animate-height": "^0.10.9",
        "react-app": "^1.1.2",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.6",
        "react-transition-group": "^1.2.1",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0",
        "reselect": "^3.0.1",
        "sequelize": "^4.37.10",
        "serve-favicon": "^2.5.0",
        "warning": "^3.0.0",
        "winston": "^2.4.2",
        "zenscroll": "^4.0.0"
    },
    "devDependencies": {
        "@types/luxon": "^0.2.2",
        "eslint": "^4.19.1",
        "mocha": "^5.1.1",
        "pre-push": "^0.1.1",
        "react-app-tools": "^1.1.2",
        "request": "^2.87.0",
        "request-promise": "^4.2.2"
    },
    "babel": {
        "presets": [
            "react",
            "es2015",
            "stage-1"
        ],
        "plugins": [
            "transform-runtime"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "extends": "airbnb"
    },
    "pre-push": [
        "front-lint"
    ]
}
