{
    "compilerOptions": {
        "outDir": "build/dist",
        "rootDir": ".",
        "baseUrl": "src",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "es7", "dom"],
        "sourceMap": false,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "paths": {
        "component": "./src/component"
    },
    "exclude": [
        "node_modules",
        "config",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
